<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="@drawable/login_bg"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_above="@+id/scantv"
        android:layout_centerInParent="true"
        android:src="@drawable/qrvcode"
        android:scaleType="fitXY"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:id="@+id/scantv"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="Scannez votre code QR pour vous connecter \n ou utilisez votre email"
        android:textSize="20sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/startscanner"
            android:layout_above="@+id/or"
            android:text="QR CODE"
            android:textSize="25sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/avecemail"
        android:layout_above="@+id/layoutoublier"
        android:text="EMAIL"
        android:textSize="25sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:id="@+id/or"
            android:layout_above="@+id/avecemail"
            android:text="ou"
            android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutoublier"
        android:weightSum="10"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:id="@+id/sinscrir"
            android:text="@string/sinscrir"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="|"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:id="@+id/mdpoublier"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:text="@string/oublier"
            android:textSize="15sp"/>

    </LinearLayout>

    </RelativeLayout>

</LinearLayout>