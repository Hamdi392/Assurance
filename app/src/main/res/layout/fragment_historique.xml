<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HistoriqueFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ss.com.bannerslider.Slider
            android:id="@+id/banner_slider1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:slider_interval="5000"
            app:slider_loopSlides="false"
            app:slider_animateIndicators="true"
            app:slider_indicatorSize="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:background="@drawable/raduis_bg"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2.1"
            android:orientation="horizontal"
            android:id="@+id/layoutNumero"
            android:gravity="center_vertical"
            android:layout_height="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Numero de quittance :"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <Space
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/numerohist"
                android:textColor="@color/mainOrange"
                android:text="-"
                android:textAlignment="center"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2.1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/layoutPeriode"
            android:layout_height="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Date du :"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <Space
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/mainOrange"
                android:text="-"
                android:id="@+id/dateduhisto"
                android:textAlignment="center"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2.1"
            android:orientation="horizontal"
            android:id="@+id/layoutMonatnt"
            android:gravity="center_vertical"
            android:layout_height="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Date au :"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <Space
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/mainOrange"
                android:text="-"
                android:textAlignment="center"
                android:id="@+id/dateauhisto"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2.1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/layoutPayement"
            android:layout_height="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Montant payÃ©e:"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <Space
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/mainOrange"
                android:text="-"
                android:textAlignment="center"
                android:id="@+id/montanthisto"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
</FrameLayout>