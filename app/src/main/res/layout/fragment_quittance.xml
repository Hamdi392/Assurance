<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".fragments.QuittanceFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:id="@+id/layoutt"
            android:background="@drawable/raduis_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2.1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="80dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:padding="10dp"
                    android:src="@drawable/receipt"
                    android:layout_height="match_parent" />
                <Space
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:textSize="25sp"
                    
                    android:id="@+id/policeNameTop"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="textStart"
                    android:text="Automobile"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2.05"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Numero contrat :"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    
                    android:layout_height="wrap_content" />
                <Space
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    
                    android:id="@+id/numeroPolicecot"
                    android:textColor="@color/mainOrange"
                    android:text="352"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2.05"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Nom produit :"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    
                    android:layout_height="wrap_content" />
                <Space
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    
                    android:id="@+id/nomPolicecot"
                    android:textColor="@color/mainOrange"
                    android:text="Mercedes E300"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2.05"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="PÃ©riode :"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    
                    android:layout_height="wrap_content" />
                <Space
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    
                    android:id="@+id/periodecot"
                    android:textColor="@color/mainOrange"
                    android:text="2019"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2.05"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Etat :"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    
                    android:layout_height="wrap_content" />
                <Space
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/etatcot"
                    android:textSize="18sp"
                    
                    android:textColor="@color/mainOrange"
                    android:text="En Cours"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2.05"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Mois :"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    
                    android:layout_height="wrap_content" />
                <Space
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:textAlignment="center"
                    android:entries="@array/country_arrays"
                    android:prompt="@string/country_prompt" />
            </LinearLayout>

        </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/layoutt"
        android:textSize="17sp"
        android:textColor="#fff"
        android:id="@+id/btncotisation"
        android:background="@color/mainOrange"
        android:text="Cotisation"/>
</RelativeLayout>