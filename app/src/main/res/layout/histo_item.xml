<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@drawable/raduis_bg"
    android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2.1"
            android:orientation="horizontal"
            android:id="@+id/layoutNumero"
            android:gravity="center_vertical"
            android:layout_height="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Numero de quittance :"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                
                android:layout_height="wrap_content" />
            <Space
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                
                android:id="@+id/numerohist"
                android:textColor="@color/mainOrange"
                android:text="-"
                android:textAlignment="center"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2.1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/layoutPeriode"
            android:layout_height="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Date du :"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                
                android:layout_height="wrap_content" />
            <Space
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                
                android:textColor="@color/mainOrange"
                android:text="-"
                android:id="@+id/dateduhisto"
                android:textAlignment="center"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2.1"
            android:orientation="horizontal"
            android:id="@+id/layoutMonatnt"
            android:gravity="center_vertical"
            android:layout_height="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Date au :"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                
                android:layout_height="wrap_content" />
            <Space
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                
                android:textColor="@color/mainOrange"
                android:text="-"
                android:textAlignment="center"
                android:id="@+id/dateauhisto"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2.1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/layoutPayement"
            android:layout_height="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Montant payÃ©e:"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                
                android:layout_height="wrap_content" />
            <Space
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                
                android:textColor="@color/mainOrange"
                android:text="-"
                android:textAlignment="center"
                android:id="@+id/montanthisto"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
